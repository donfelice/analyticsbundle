{% extends 'EzPlatformAdminUiBundle::layout.html.twig' %}

{% trans_default_domain 'dashboard' %}

{% block bodyClass %}ez-dashboard{% endblock %}

{% block content %}
    <div class="row align-items-stretch ez-main-row ez-dashboard-row">
        {% block left_sidebar %}{% endblock left_sidebar %}
        <div class="col-sm-12">
            <div class="container">
                <div class="card border-light my-4">
                    <div class="card-body" data-analytics-clientid="{{clientid}}">

                        <h3 class="mb-3">Pages</h3>

                        <div id="embed-api-auth-container"></div>
                        <div id="chart-container"></div>
                        <div id="view-selector-container"></div>

                        <section id="timeline"></section>

                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {%  javascripts
        'bundles/ezplatformadminui/js/scripts/udw/browse.js'
        'bundles/donfeliceanalytics/js/gapi.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="/bundles/donfeliceanalytics/js/analytics-pages-ui.js.twig"></script>
{% endblock %}
