{% extends 'EzPlatformAdminUiBundle::layout.html.twig' %}

{% trans_default_domain 'dashboard' %}

{% block bodyClass %}ez-dashboard{% endblock %}

{% block content %}
    <div class="row align-items-stretch ez-main-row ez-dashboard-row">
        {% block left_sidebar %}{% endblock left_sidebar %}
        <div class="col-sm-12">
            <div class="container">
                <div class="card border-light my-4">
                    <div class="card-body" data-analytics-clientid="{{clientid}}">

                        <h3 class="mb-2">Dashboard for Google Analytics</h3>

                        <header>
                          <div id="embed-api-auth-container"></div>
                          <div id="view-selector-container" class="invisible flatten"></div>
                          <div id="view-name" class="invisible flatten"></div>
                          <div id="active-users-container"></div>
                        </header>

                        <br>

                        <div class="Chartjs">
                          <h3>This Week vs Last Week (by sessions)</h3>
                          <figure class="Chartjs-figure" id="chart-1-container"></figure>
                          <ol class="Chartjs-legend" id="legend-1-container"></ol>
                        </div>
                        <div class="Chartjs">
                          <h3>This Year vs Last Year (by users)</h3>
                          <figure class="Chartjs-figure" id="chart-2-container"></figure>
                          <ol class="Chartjs-legend" id="legend-2-container"></ol>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="Chartjs">
                                  <h3>Top Browsers (by pageview)</h3>
                                  <figure class="Chartjs-figure" id="chart-3-container"></figure>
                                  <ol class="Chartjs-legend" id="legend-3-container"></ol>
                                </div>
                            </div>
                            <div class="col">
                                <div class="Chartjs">
                                  <h3>Top Countries (by sessions)</h3>
                                  <figure class="Chartjs-figure" id="chart-4-container"></figure>
                                  <ol class="Chartjs-legend" id="legend-4-container"></ol>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js"></script>

{% endblock %}

{% block stylesheets %}
{% stylesheets
    'bundles/donfeliceanalytics/css/analytics-ui.css'
%}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}

{% endblock %}

{% block javascripts %}
    {%  javascripts
        'bundles/ezplatformadminui/js/scripts/udw/browse.js'
        'bundles/donfeliceanalytics/js/gapi.js'
        'bundles/donfeliceanalytics/js/active-users.js'
        'bundles/donfeliceanalytics/js/date-range-selector.js'
        'bundles/donfeliceanalytics/js/view-selector2.js'
        'bundles/donfeliceanalytics/js/analytics-dashboard-ui.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
